{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "BOT V1 for guild sync",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prestart": "npm run migrate",
    "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "build": "tsc",
    "build:migrate": "npm run build && npm run migrate",
    "build:config": "tsc src/config/config.ts --outDir dist/config",
    "deploy": "ts-node --transpile-only src/deploy-commands.ts",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "clean": "rimraf dist && mkdir dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@discordjs/rest": "^2.4.3",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.7.9",
    "discord-api-types": "^0.37.119",
    "discord.js": "^14.17.3",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "pgtools": "^1.0.1",
    "sequelize": "^6.37.5"
  }
}
